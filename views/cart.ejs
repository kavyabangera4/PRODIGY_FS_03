<!DOCTYPE html>
<html>
<head>
  <title>Your Cart</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f9f9f9;
      text-align: center;
      margin: 0;
      padding: 0;
    }

    h1 {
      background-color: #007bff;
      color: white;
      padding: 20px;
      margin: 0;
    }

    table {
      width: 80%;
      margin: 30px auto;
      border-collapse: collapse;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      background-color: white;
    }

    th, td {
      padding: 12px;
      border: 1px solid #ccc;
      font-size: 16px;
    }

    th {
      background-color: #f0f0f0;
    }

    a {
      text-decoration: none;
      color: #dc3545;
      font-weight: bold;
    }

    a:hover {
      text-decoration: underline;
    }

    h3 {
      margin-top: 20px;
      color: #333;
    }

    .empty {
      margin-top: 50px;
      font-size: 18px;
      color: #777;
    }

    .continue {
      display: inline-block;
      margin: 20px;
      padding: 10px 20px;
      background-color: #28a745;
      color: white;
      border-radius: 5px;
      text-decoration: none;
    }

    .continue:hover {
      background-color: #218838;
    }
  </style>
</head>
<body>
  <h1>Your Shopping Cart</h1>

  <% if (cart.length === 0) { %>
    <p class="empty">Your cart is empty.</p>
  <% } else { %>
    <table>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
      <% cart.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td>₹<%= item.price %></td>
          <td><a href="/remove-from-cart/<%= item.id %>">Remove</a></td>
        </tr>
      <% }) %>
    </table>
    <h3>Total: ₹<%= total %></h3>
  <% } %>

  <a class="continue" href="/">⬅ Continue Shopping</a>
</body>
</html>
