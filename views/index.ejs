<!DOCTYPE html>
<html>
<head>
  <title>Local Store</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
      text-align: center;
    }

    h1 {
      background-color: #007bff;
      color: white;
      padding: 20px;
      margin: 0;
    }

    .categories {
      margin: 20px 0;
    }

    .categories a {
      margin: 0 10px;
      text-decoration: none;
      padding: 8px 16px;
      background-color: #ddd;
      color: #333;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .categories a:hover {
      background-color: #007bff;
      color: white;
    }

    .product-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      padding: 20px;
    }

    .product {
      background-color: white;
      border: 1px solid #ccc;
      border-radius: 10px;
      width: 220px;
      padding: 15px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      transition: transform 0.2s;
    }

    .product:hover {
      transform: scale(1.02);
    }

    .product img {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 5px;
    }

    .product h3 {
      margin: 10px 0 5px;
      font-size: 1.1em;
    }

    .product p {
      font-size: 0.9em;
      color: #555;
    }

    .product a {
      display: inline-block;
      margin-top: 10px;
      padding: 8px 12px;
      background-color: #28a745;
      color: white;
      border-radius: 5px;
      text-decoration: none;
      transition: background-color 0.3s;
    }

    .product a:hover {
      background-color: #218838;
    }

    .cart-link {
      position: absolute;
      top: 20px;
      right: 20px;
      background-color: #ffc107;
      padding: 10px 15px;
      border-radius: 5px;
      text-decoration: none;
      color: #333;
      font-weight: bold;
    }

    .cart-link:hover {
      background-color: #e0a800;
    }
  </style>
</head>
<body>
  <h1>Welcome to Local Store</h1>
  <a href="/cart" class="cart-link">ðŸ›’ View Cart</a>

  <div class="categories">
    <h3>Filter by Category</h3>
    <a href="/">All</a>
    <a href="/?category=Shirts">Shirts</a>
    <a href="/?category=Shoes">Shoes</a>
  </div>

  <div class="product-container">
    <% products.forEach(p => { %>
      <div class="product">
        <img src="<%= p.image %>" alt="<%= p.name %>">
        <h3><%= p.name %></h3>
        <p>â‚¹<%= p.price %></p>
        <p><%= p.description %></p>
        <a href="/add-to-cart/<%= p.id %>">Add to Cart</a>
      </div>
    <% }) %>
  </div>
</body>
</html>
